<body>

<div class="box">
  <h3>Input Usulan Musrenbang</h3>

  <form id="form" onsubmit="kirim(); return false;">
    <input id="kelurahan" placeholder="Kelurahan" required>
    <input id="bidang" placeholder="Bidang" required>
    <input id="kegiatan" placeholder="Kegiatan" required>
    <input id="lokasi" placeholder="Lokasi">
    <input id="opd" placeholder="OPD">
    <textarea id="keterangan" placeholder="Keterangan"></textarea>

    <button type="submit">Kirim Usulan</button>
  </form>
</div>

<script>
function kirim() {

  const data = new FormData();
  data.append("kelurahan", kelurahan.value);
  data.append("bidang", bidang.value);
  data.append("kegiatan", kegiatan.value);
  data.append("lokasi", lokasi.value);
  data.append("opd", opd.value);
  data.append("keterangan", keterangan.value);

  fetch("<?= ScriptApp.getService().getUrl() ?>", {
    method: "POST",
    body: data
  })
  .then(res => res.text())
  .then(res => {
    if (res === "OK") {
      alert("Usulan berhasil dikirim");
      document.getElementById("form").reset();
    } else {
      alert(res);
    }
  });
}
</script>

</body>
